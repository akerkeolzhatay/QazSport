<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Регистрация</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            background: linear-gradient(135deg, #FFF5EE, #2b2b2b);
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        p{
            color: #000000;
            font-size: 17px;
        }

        .container {
            background: #FFF5EE;
            width: 700px;
            height: 500px;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0px 4px 15px rgba(255, 255, 255, 0.1);
            text-align: center;
        }

        .form-title {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            color: #000000;
            font-size: 17px;
        }

        .input-group {
            position: relative;
            margin-bottom: 20px;
            font-size: 17px;
        }

        input {
            width: 100%;
            padding: 12px;
            border: none;
            border-bottom: 2px solid #A52A2A;
            background: transparent;
            color: #000000;
            font-size: 16px;
            outline: none;
            font-size: 17px;
        }

        label {
            position: absolute;
            top: 10px;
            left: 10px;
            color: #000000;
            transition: 0.3s;
            font-size: 17px;
        }

        input:focus~label,
        input:not(:placeholder-shown)~label {
            top: -15px;
            font-size: 12px;
            color: #000000;
            font-size: 17px;
        }

        .btn {
            background: #000000;
            color: white;
            font-size: 18px;
            border: none;
            padding: 12px;
            width: 100%;
            border-radius: 6px;
            cursor: pointer;
            transition: 0.3s;
            font-size: 17px;
        }

        .btn:hover {
            background: #A52A2A;
        }

        .links {
            display: flex;
            justify-content: space-between;
            margin-top: 15px;
            font-size: 17px;
        }

        button {
            background: none;
            border: none;
            color: #050200;
            font-weight: bold;
            cursor: pointer;
            transition: 0.3s;
            font-size: 17px;
        }

        button:hover {
            text-decoration: underline;
            color: #A52A2A;
        }
    </style>
</head>

<body>
    
    <%- include('navbar') %>
    <div class="container" id="signup" style="display:none;">
        <h1 class="form-title" style="font-size: 20px;">Регистрация</h1>
        <form method="post" action="/signup">
            <div class="input-group">
                <input type="text" name="name" id="name" placeholder=" " required>
                <label for="name">Имя</label>
            </div>
            <div class="input-group">
                <input type="email" name="email" id="email" placeholder=" " required>
                <label for="email">Email</label>
            </div>
            <div class="input-group">
                <input type="password" name="password" id="password" placeholder=" " required>
                <label for="password">Пароль</label>
            </div>
            <input type="submit" class="btn" value="Зарегистрироваться" name="signUp">
        </form>

        <div class="links">
            <p>У вас уже есть аккаунт?</p>
            <button id="signInButton">Войти</button>
        </div>
    </div>

    <div class="container" id="signIn">
        <h1 class="form-title" style="font-size: 20px;">Войти</h1>
        <form method="post" action="/signin">
            <div class="input-group">
                <input type="email" name="email" id="email" placeholder=" " required>
                <label for="email">Email</label>
            </div>
            <div class="input-group">
                <input type="password" name="password" id="password" placeholder=" " required>
                <label for="password">Пароль</label>
            </div>

            <input type="submit" class="btn" value="Войти" name="signIn">
        </form>

        <div class="links">
            <p>У вас еще нет аккаунта?</p>
            <button id="signUpButton">Зарегистрироваться</button>
        </div>
    </div>

    <script>
        const signUpButton = document.getElementById('signUpButton');
        const signInButton = document.getElementById('signInButton');
        const signInForm = document.getElementById('signIn');
        const signUpForm = document.getElementById('signup');

        signUpButton.addEventListener('click', function () {
            signInForm.style.display = "none";
            signUpForm.style.display = "block";
        });

        signInButton.addEventListener('click', function () {
            signInForm.style.display = "block";
            signUpForm.style.display = "none";
        });
    </script>
</body>

</html>
